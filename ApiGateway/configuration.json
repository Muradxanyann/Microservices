{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "shop-api",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/shop/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete", "Patch" ],
      "SwaggerKey": "shop"
    },
    {
      "DownstreamPathTemplate": "/api/{everything}", 
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "shop-auth-service",
          "Port": 8080
        }
      ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete", "Patch" ],
      "SwaggerKey": "auth"
    }
  ],

  "SwaggerEndPoints": [
    {
      "Key": "shop",
      "Config": [
        {
          "Name": "Shop API",
          "Version": "v1",
          "Url": "http://shop-api:8080/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "auth",
      "Config": [
        {
          "Name": "Auth Service API",
          "Version": "v1",
          "Url": "http://shop-auth-service:8080/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8000"
  }
}

